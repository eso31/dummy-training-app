<% title 'Classes & Workshops' %>

<div class="card">

  <div class="card-header">
    <h5><strong><%= yield(:title) %></strong></h5>
  </div>

  <div class="card-body">

    <div class="row">
      <div class="col-12">

            <div class="pull-left">
              <%= form_tag(training_sessions_path, method: :get) do %>

            <div class="form-group row">
              <div class="col-md-12">
                <div class="input-group">
                  <%= text_field_tag :q, params[:q], class: 'form-control' %>
                  <span class="input-group-btn">
                    <%= button_tag nil, name: nil, class: 'btn btn-primary' do %>
                      <i class="fa fa-search"></i> Search
                    <% end %>
                  </span>
                </div>
              </div>
            </div>

          <% end %>
        </div>

        <div class="pull-right">
          <% if current_user.has_cached_role?(:workshops_admin) || current_user.has_cached_role?(:admin) %>
              <%= link_to new_training_session_path, class: 'btn btn-primary' do %>
                  <span class="glyphicon glyphicon-plus"></span>
                  New Training session
              <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <%= render 'training_sessions/training_session_table' %>

  </div>
</div>