<% title 'Ledger category' %>

<div class="row">
  <div class="container-fluid">
    <div class="pull-right">
      <%= link_to ledger_categories_path, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          Back
      <% end %>
      <%= link_to edit_ledger_category_path(@ledger_category), class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-pencil"></span>
          Edit
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5><strong><%= yield :title %></strong></h5>
        <h4 class="text-headline"><%= @ledger_category.name %></h4>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-md-8">

            <dl class="dl-horizontal">
              <dt>Name:</dt>
              <dd><%= @ledger_category.name %></dd>
            </dl>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
