<div class="panel panel-default">
  <div class="panel-body">

    <%= form_for(@class_location, html: {class: "form-horizontal", role: "form"}) do |f| %>
        <% if @class_location.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4><%= pluralize(@class_location.errors.count, 'error') %> prohibited this class_location from being
                saved:</h4>

              <ul>
                <% @class_location.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>



        <%= f.text_field :name %>
        <%= f.text_field :email %>
        <%= f.text_field :timezone %>

      <div class="form-group">
        <div class="col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>
</div>