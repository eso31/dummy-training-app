<div class="panel panel-default">
  <div class="panel-body">

    <%= form_for(@session_rating, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
      <% if @session_rating.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@session_rating.errors.count, "error") %> prohibited this session_rating from being
            saved:</h4>

          <ul>
            <% @session_rating.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.number_field :rating, class: 'form-control' %>
      <div class="form-group">
        <%= f.label :user_type, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.select :session_rating, :user_type, SESSION_RATING_TYPES, class: 'form-control' %>
        </div>
      </div>

      <%= f.text_area :comment, class: 'form-control' %>
      <%= f.autocomplete :enrollment, label_classes: 'col-sm-2', field_classes: 'col-sm-12' %>
      <%= f.autocomplete :user, label_classes: 'col-sm-2', field_classes: 'col-sm-12' %>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
