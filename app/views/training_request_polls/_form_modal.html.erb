<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Vote for: <strong><%= @training_request.name %></strong></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<%= form_for([@training_request, @training_request_poll], html: { class: "form-horizontal", role: "form" }) do |f| %>

  <% if @training_request_poll.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@training_request_poll.errors.count, "error") %> prohibited this training_request_poll from being saved:</h4>

      <ul>
        <% @training_request_poll.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="modal-body">
    <div class="form-group">
      <div class="col-sm-10">
        <div class="form-group">
          <%= f.label :vote, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.select :training_request_poll, :vote, TrainingRequestPoll.votes.keys %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.text_area :comment, style: { resize: 'vertical' }, class: 'form-control' %>
      </div>
    </div>

  </div>
    <div class="modal-footer">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="form-group float-right">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Save', class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>